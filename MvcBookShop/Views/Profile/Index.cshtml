@{
    ViewData["Title"] = "Profile";
}

<div class="container">
    <h1> Profile </h1>
    <div class="container">
        <div class="row">
            <div class="col-sm-12 profilepage-card">
                <div class="card">
                    <div class="card-body border-0">
                        <div class="form-group row">
                            <label for="user" class="font-weight-bold col-sm-2 col-form-label">User ID</label>
                            <div class="col-sm-8">
                                <input readonly type="text" class="form-control-plaintext col-sm-8" id="user" value=@ViewData["id"]>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="name" class="font-weight-bold col-sm-2 col-form-label">Name</label>
                            <div class="col-sm-8">
                                <input readonly type="text" class="form-control-plaintext col-sm-8" id="name" value="@ViewData["Nome"]">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="NIF" class="font-weight-bold col-sm-2 col-form-label">NIF</label>
                            <div class="col-sm-8">
                                <input readonly type="text" class="form-control-plaintext col-sm-8" id="NIF" value="@ViewData["NIF"]">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="address" class="font-weight-bold col-sm-2 col-form-label">Address</label>
                            <div class="col-sm-8">
                                <form action="@Url.Action("EditMorada", "EditUser")" method="post">
                                    <input type="text" class="form-control col-sm-8" name="morada" id="address" value="@ViewData["Morada"]">
                                    <button class="btn btn-default" type="submit">
                                        Update
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="postalCode" class="font-weight-bold col-sm-2 col-form-label">
                                Postal
                                code
                            </label>
                            <div class="col-md-8">
                                <form action="@Url.Action("EditPostalCode", "EditUser")" method="post">
                                    <input type="text" class="form-control col-sm-8" id="postalCode" name="code"
                                           value="@ViewData["CodigoPostal"]">
                                    <button class="btn btn-default" type="submit">
                                        Update
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="phone" class="font-weight-bold col-sm-2 col-form-label">Phone</label>
                            <div class="col-sm-8">
                                <form action="@Url.Action("EditPhone", "EditUser")" method="post">
                                    <input type="text" class="form-control col-sm-8" id="phone" name="phone" value=@ViewData["Telefone"]>
                                    <button class="btn btn-default" type="submit">
                                        Update
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="email" class="font-weight-bold col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-8">
                                <form action="@Url.Action("EditEmail", "EditUser")" method="post">
                                    <input type="email" class="form-control col-sm-8" name="email" id="email" value=@ViewData["Email"]>
                                    <button class="btn btn-default" type="submit">
                                        Update
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="font-weight-bold col-sm-2 col-form-label">Password</label>
                            <div class="col-sm-8">
                                <form action="@Url.Action("EditPassword", "EditUser")" method="post">
                                    <input type="password" class="form-control col-sm-8" name="password" id="password" value="placeholder">
                                    <button class="btn btn-default" type="submit">
                                        Update
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>