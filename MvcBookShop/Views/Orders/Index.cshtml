@{
    ViewData["Title"] = "Orders";

    var orders = ViewData["Orders"] as List<Orders>;

}

<div class="container">
    <h1> Orders </h1>
    <div class="content-container">
         @foreach(var order in orders){
        <div class="card">
            <div class="card-body">
                <div class="order-item row">
                    <div class="col-md-2">
                        @order.DataCarga
                    </div>
                    <div class="col-md-2">
                         @{var cover1="/images/books/" + @order.artigos[0][0] + ".jpg";}
                        <img src=@cover1
                            alt="" class="product-pic">
                    </div>
                    <div class="col-md-3">
                        @order.artigos[0][1]
                    </div>
                    <div class="col">
                        @order.Total
                    </div>
                    <div class="font-weight-bold col-md-3">
                        @order.Estado                    
                        </div>
                </div>
                @for(var i = 1; i < order.artigos.Count; i++)
                {
                <div class="order-item row">
                    <div class="col-md-2">

                    </div>
                    <div class="col-md-2">
                         @{var cover="/images/books/" + @order.artigos[i][0] + ".jpg";}
                        <img src=@cover
                            alt="" class="product-pic">
                    </div>
                    <div class="col-md-3">
                        @order.artigos[i][1]
                    </div>
                    <div class="col-md-2">
                    </div>
                    <div class="howpayed col-md-1">
                    </div>
                    <div class="font-weight-bold col-md-2">
                    </div>
                </div>
                }
            </div>
        </div>
        }
        <nav class="page-selector" aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                    <a class="page-link page-arrow" href="#" aria-label="Previous">
                        <span aria-hidden="true"><i class="fas fa-arrow-left"></i></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                    <a class="page-link page-arrow" href="#" aria-label="Next">
                        <span aria-hidden="true"><i class="fas fa-arrow-right"></i></span>
                        <span class="sr-only">Next</span>
                    </a>
                    </li>
                </ul>
        </nav>
    </div>
</div>
