@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div id="demo" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active">
            </li>
        
            <li data-target="#demo" data-slide-to="1">
            </li>
        
            <li data-target="#demo" data-slide-to="2">
            </li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="./images/Banner.png" alt="Los Angeles">
            </div>
        
            <div class="carousel-item">
                <img src="./images/Banner_1.png" alt="Chicago">
            </div>
        
            <div class="carousel-item">
                <img src="./images/Banner.png" alt="New York">
            </div>
        </div>
    
        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon">
            </span>
        </a>
  
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon">
            </span>
        </a>
    </div>

    <div id="booksList">
        <div>
            <div id="title_homepage" class="row">
                <h2>
                    Most popular
                </h2>
            </div>

            <div class="row">
                @{@ViewData["PopularError"]
                }

                @foreach (var book in ViewData["PopularBooks"] as IList<Book>)
                {
                    <div class="col-sm-2">
                        <center>
                            <a href="BookPage?id=@book.ID">
                                <img src="@book.Cover" alt="book">
                            </a>
                        </center>

                        <p id="bookName">
                            <center>
                                @book.Title
                            </center>
                        </p>

                        <p>
                            <center>
                                @book.Price
                            </center>
                        </p>
                    </div>
                }
            </div>
        </div>

        <div>
            <div id="title_homepage" class="row">
                <h2>
                    Recents
                </h2>
            </div>

            <div class="row">
                @{@ViewData["RecentError"]
                }

                @foreach (var book in ViewData["RecentBooks"] as IList<Book>)
                {
                    <div class="col-sm-2">
                        <center>
                            <a href="BookPage?id=@book.ID">
                                <img src="@book.Cover" alt="book">
                            </a>
                        </center>

                        <p id="bookName">
                            <center>
                                @book.Title
                            </center>
                        </p>

                        <p>
                            <center>
                                @book.Price
                            </center>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>